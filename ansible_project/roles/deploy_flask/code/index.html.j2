{% raw %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Notes App</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f0f2f5;
            margin: 0;
            padding: 0;
        }
        .container {
            width: 500px;
            margin: 50px auto;
            background: white;
            padding: 20px;
            box-shadow: 0px 0px 10px rgba(0,0,0,0.1);
            border-radius: 8px;
        }
        h1 {
            text-align: left;
            color: #333;
            margin-bottom: 20px;
        }
        form {
            margin-top: 20px;
            margin-bottom: 25px;
        }
        form textarea {
            width: 100%;
            height: 50px;
            padding: 10px;
            margin-bottom: 10px;
            font-size: 16px;
            border-radius: 5px;
            border: 1px solid #ccc;
            resize: none;
        }
        form button {
            background: #28a745;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        form button:hover {
            background: #218838;
        }
        .note {
            background: #fafafa;
            padding: 10px;
            border-left: 4px solid #28a745;
            margin-bottom: 10px;
            border-radius: 5px;
        }
        .note-time {
            font-size: 12px;
            color: #777;
            text-align: right;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Add a Note</h1>
        <form method="POST" id="noteForm">
            <textarea name="note" placeholder="Write your note here..." required></textarea>
            <button type="submit">Add Note</button>
        </form>

        {% for note in notes %}
            <div class="note">
                <p>{{ note[0] }}</p>
                <div class="note-time">{{ note[1] }}</div>
            </div>
        {% endfor %}
    </div>

    <script>
        document.querySelector('textarea').addEventListener('keypress', function(e) {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                document.getElementById('noteForm').submit();
            }
        });
    </script>
</body>
</html>
{% endraw %}
